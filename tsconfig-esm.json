{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "Node",
    "outDir": "dist/esm",
    "sourceMap": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "baseUrl": "."
  },
  "include": [
    "./src"
  ]
}
